{
  "name": "udemy-modern-javascipt-react-beginner",
  "private": true,
  "type": "module",
  "scripts": {
    "css:watch": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css --watch",
    "dev": "run-p css:watch",
    "css:build": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css --minify",
    "build": "run-s css:build",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@tailwindcss/cli": "^4.1.17",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.17"
  }
}
